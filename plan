/**
 * Membership plan class.
 */
public class Plan {
    private String planName;
    private int durationMonths;
    private double price;

    public Plan(String planName, int durationMonths, double price) {
        this.planName = planName;
        this.durationMonths = durationMonths;
        this.price = price;
    }

    public String getPlanName() { return planName; }
    public int getDurationMonths() { return durationMonths; }
    public double getPrice() { return price; }

    public void setDurationMonths(int d) { this.durationMonths = d; }
    public void setPrice(double p) { this.price = p; }

    @Override
    public String toString() {
        return String.format("%s (%d months) $%.2f", planName, durationMonths, price);
    }
}
